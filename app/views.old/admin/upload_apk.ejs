                                <a class="btn btn-default"> > </a><br />
                                <a class="btn btn-default"> < </a>
                            </td>
                            <td class="col-md-5 col-lg-5">
                                <font>Permit Images Group</font><br />
                                <ul type="none" style="padding:10px;border:1px solid black">
                                    <li id="img_1">android_x86.img</li>
                                </ul>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
		<!-- End of Content -->

    </div>
    <!-- end of wrapper -->

   

	<!-- jQuery -->
    <script type="text/javascript">
       

        var margin_l = 20;
        $('#user_block').css({
            'margin-right': margin_l + 'px'
        });
        var upload_block_width = $("#upload_block").width() + margin_l + 30;
        console.log(upload_block_width);
        $('#upload_block').css({
            'width': upload_block_width + 'px'
        });

        // user select view
        $("li[id^=user]").click(function() {
            var choice = $(this).attr('id').split('user_')[1]; //get the clicked data ;
            console.log(choice);
            $("li[id^=user]").css({
                'background-color': 'white',
                'color': 'black'
            });
            $(this).css({
                'background-color': "#6898d4",
                'color': 'white'
            });
        });

        // department select view
        $("li[id^=depart]").click(function() {
            var choice = $(this).attr('id').split('depart_')[1]; //get the clicked data ;
            console.log(choice);
            $("li[id^=depart]").css({
                'background-color': 'white',
                'color': 'black'
            });
            $(this).css({
                'background-color': "#6898d4",
                'color': 'white'
            });
        });

        // images select view
        $("li[id^=img]").click(function() {
            var choice = $(this).attr('id').split('img_')[1]; //get the clicked data ;
            console.log(choice);
            $("li[id^=img]").css({
                'background-color': 'white',
                'color': 'black'
            });
            $(this).css({
                'background-color': "#e25050",
                'color': 'white'
            });
        });

        var object = "depart";
        //object 
        $('[name=assign_object]').change(function() {
            object = $(this).val();
            $("#select_user_tr").hide();
            $("#select_depart_tr").hide();
            $("[name=auth_type][value=public]").prop('checked', 'true');
        });

        // user auth type
        $('[name=auth_type]').change(function() {

            console.log(object);
            if (object == "depart") //選擇指派部門
            {
                switch ($(this).val()) {
                    case "public":
                        $("#select_depart_tr").hide();
                        break;
                    case "private":
                        $("#select_depart_tr").show();

                        break;
                }
            } else //選擇指派使用者
            {
                console.log($(this).val());
                switch ($(this).val()) {
                    case "public":
                        $("#select_user_tr").hide();
                        break;
                    case "private":
                        $("#select_user_tr").show();

                        break;
                }
            }


        });
        $("#select_depart_tr").hide();
        $("#select_user_tr").hide();

        //images auth type

        $('[name=img_auth_type]').change(function() {
            switch ($(this).val()) {
                case "public":
                    $("#select_img_tr").hide();
                    break;
                case "private":
                    $("#select_img_tr").show();

                    break;
            }
        });

        $('[name=img_auth_type]').change();
        $('#select_img_tr').hide();
    </script>

