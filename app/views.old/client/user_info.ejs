<script>
$.cookie.json = true;
    var brahmaData = $.cookie("brahmaData");

    var username = brahmaData.username;

    reloadUserData();

    function reloadUserData(){
        $.post('/client/user_info',{
           username:username
        },function(data){
            $("div.main_block>div").html(data);
        });
    }

    setInterval(Function("reloadUserData();"),1000);

</script>