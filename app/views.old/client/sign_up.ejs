<%- include('../_layout/client_header'); %>
    <style>
        table td{
                padding:10px;
        }
        table th{
                padding:10px;
        }   
    </style>
          <!-- Content start -->
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Sign Up</h1>
                </div>
            </div>

            <div class="row">
                <form action="/client/sign_up" method="post">
                       <table>
                            <tr>
                                <td>username：</td>
                                <td><input type="text" name="username" class="form-control"></td>
                            </tr>
                            
                             <tr>
                                <td>password：</td>
                                <td><input type="password" name="password" class="form-control"></td>
                            </tr>

                             <tr>
                                <td>email：</td>
                                <td><input type="email" name="email" class="form-control"></td>
                            </tr>

                             <tr>
                                <td>device type：</td>
                                <td>
                                        <select name="device_type" class="form-control" id="">
                                            <% Object.keys(device_type).forEach(function(key){ %>
                                                    <option value="<%=key%>"><%=key%></option>
                                            <% })  %>
                                        </select>

                                </td>
                            </tr>
                            
                            <tr>
                                <td colspan="2">    
                                    <input type="submit" class="btn btn-primary" value="Submit">
                                    <a href="/admin/show_user" class="btn btn-default" style="margin-left:10px">Back</a>
                                </td>
                            </tr>
                        </table> 
                    </form>

            </div>  
            
        </div>
        <!-- End of Content -->

    </div>
    <!-- end of wrapper -->

<%- include('../_layout/client_footer'); %>
  
