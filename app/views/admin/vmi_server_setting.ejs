<%- include('../_layout/admin_header'); %>
    <!-- page content -->
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3></h3>
              </div>

              <div class="title_right">

              </div>
            </div>

            <div class="clearfix"></div>
            
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Setting</h2>
                        </div>
                        <div class="x_content">
                            <form action="" class="white" method="post" id="serverSetting">
                                <div class="form-group">
                                    <label class="col-sm-2 col-xs-12 control-label">IP</label>
                                    <div class="col-sm-10"><input type="text" name='ip' placeholder="IP" class="form-control" id="ip" value="<%= data.ip %>"/></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-xs-12 control-label ">Net Mask</label>
                                    <div class="col-sm-10"><input type="text" name='netmask' placeholder="Net Mask" class="form-control" id="netmask" value="<%= data.netmask %>"/></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-xs-12 control-label">Gateway</label>
                                    <div class="col-sm-10"><input type="text" name='gateway' placeholder="Gateway" class="form-control" id="gateway" value="<%= data.gateway %>"/></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-xs-12 control-label">DNS</label>
                                    <div class="col-sm-10"><input type="text" name='dns' placeholder="DNS" class="form-control" id="dns" /></div>
                                </div>
                                <div class="col-sm-12 center">
                                    <span id="hint" style='color:#fdafaf'></span>
                                    <br><br>
                                    <button type="submit" class="btn btn-info">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
              </div>           
            </div>
        </div>
    </div>
    <!-- page content -->

<%- include('../_layout/admin_footer'); %>
<script src="/js/part/admin/js.vmi_server_setting.js"></script>

