<%- include('../_layout/admin_header'); %>
    <style>
        td{
            text-align:left ;
        }
    </style>
        <!-- Content start-->
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Virtual Machine - Create</h1>
                </div>
            </div>

            <div class="row">
                 <form action="/admin/add_vm" method="post">

                    <table class="col-md-8 col-lg-8" style="font-size:18px;margin-left:20px">
                        <tr>
                            <td>Use Images：</td>
                            <td>
                               androidx86-0123.img
                            </td>
                        </tr>

                        <tr>
                            <td>Operation System：</td>
                            <td>Android</td>
                        </tr>

                        <tr>
                            <td>Bits：</td>
                            <td>32</td>
                        </tr>

                        <tr>
                            <td>Version：</td>
                            <td>5.1.1</td>
                        </tr>

                        <tr>
                            <td  colspan="2">Introduction：<br />
                                <textarea name="vm_intro" id="" style="width:100%;height:100px" readonly="true"></textarea>
                            </td>
                        </tr>

                        <tr>
                            <td>VM_NAMESPACE : </td>
                            <td>VM_</td>
                        </tr>

                        <tr>
                            <td>Memory：</td>
                            <td>1G</td>
                        </tr>

                        <tr>
                            <td>Add VM count：</td>
                            <td><input type="number" min='1' max='10' name="number" style="width:25%" class="form-control"></td>
                        </tr>

                        <tr>
                            <td colspan="2">
                                <input type="submit" class="btn btn-primary col-md-offset-5 col-lg-offset-5" style="margin-right:20px" value="Run">
                                <a href="/admin/vm" onclick="javvmascript:history.go(-1)" class="btn btn-default">Back</a>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
        <!-- End of Content -->

    </div>
    <!-- end of wrapper -->

  

    <!-- jQuery -->
    <script>
       

        $('#img_select').change(function() {

            var choice = $(this).val();
            console.log(choice);
            switch (choice) {
                case "1":
                    $("[name=vm_os]").val('Android');
                    $("[name=vm_bits]").val('32');
                    $("[name=vm_version]").val('4.4.4');
                    $("[name=vm_intro]").html('This is Android 4.4.4 img.');
                    $("[name=vm_namespace]").val('Android_VM_');
                    break;
                case "2":
                    $("[name=vm_os]").val('Android');
                    $("[name=vm_bits]").val('64');
                    $("[name=vm_version]").val('4.4.4');
                    $("[name=vm_intro]").html('This is Android 4.4.4 img.');
                    $("[name=vm_namespace]").val('Android_VM_64_');
                    break;
                case "3":
                    $("[name=vm_os]").val('Android');
                    $("[name=vm_bits]").val('32')
                    $("[name=vm_version]").val('5.0');
                    $("[name=vm_intro]").html('This is Android 5.0 img.');
                    $("[name=vm_namespace]").val('Android_VM_5_');
                    break;
                case "4":
                    $("[name=vm_os]").val('Android');
                    $("[name=vm_bits]").val('64');
                    $("[name=vm_version]").val('5.0');
                    $("[name=vm_intro]").html('This is Android 5.0 img.');
                    $("[name=vm_namespace]").val('Android_VM_64_5');
                    break;
            }
        });
    </script>

<%- include('../_layout/admin_footer'); %>

