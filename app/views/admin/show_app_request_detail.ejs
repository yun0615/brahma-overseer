<%- include('../_layout/admin_header'); %>

        <!-- Content start -->
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Application Request - Skype</h1>
                </div>
            </div>

            <div class="row" style="font-size:18px">
                <span class="col-md-2" id="approve_button" style="cursor:pointer"><img src="../../dist/img/approved.jpg" alt="" style="width:20%">Approve</span>
                <span class="col-md-2" id="deny_button" style="cursor:pointer"><img src="../../dist/img/deny.jpg" alt="" style="width:20%">Deny</span>
            </div>

            <!-- Upload Block -->
            <div class="row" style="margin-top:20px">
                <div class="col-md-11 col-lg-11" id="upload_block" style="border:1px solid black;border-radius:5px;min-height:200px;padding-bottom:20px">
                    <div>
                        <h2>Detail</h2>
                        <table style="font-size:18px;width:60%" class="col-md-9" id="table_upload">
                            <tr>
                                <td class="col-md-1 col-lg-1">Name：</td>
                                <td class="col-md-1 col-lg-1">Skype</td>
                            </tr>
                            <tr>
                                <td class="col-md-1 col-lg-1">Introduction：</td>
                                <td class="col-md-2 col-lg-2">This is Skype app.</td>
                            </tr>
                            <tr>
                                <td class="col-md-1 col-lg-1">Version：</td>
                                <td class="col-md-1 col-lg-1">6.20</td>
                            </tr>
                            <tr>
                                <td class="col-md-1 col-lg-1">Apk file：</td>
                                <td class="col-md-1 col-lg-1"><a href="#">Download</a></td>
                            </tr>
                        </table>
                        <span class="col-md-offset-1 col-md-2"><img src="../../dist/img/skype.png" style="width:100%" alt=""></span>
                    </div>
                </div>
            </div>

            <div class="row" style="margin-top:20px;margin-bottom:20px">

                <!-- User Authorize Block -->
                <div class="col-md-5 col-lg-5" id="user_block" style="border:1px solid black;border-radius:5px;min-height:400px">
                    <div>
                        <h2>Department Authorize</h2>
                        <table style="font-size:18px;width:100%">
                            <tr>
                                <td>Auth_Type：</td>
                                <td><font style="color:red">private</font></td>
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align:left">
                                    <font>Department</font><br />
                                    <ul type="none" style="padding:10px;border:1px solid black;font-size:18px;min-height:200px">
                                        <li id="depart_1">Human Resources Department</li>
                                        <li id="depart_2">General Affairs Department</li>
                                        <li id="depart_3">Service Department</li>
                                    </ul>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Virtual Machine assign block -->
                <div class="col-md-6 col-lg-6" id="vm_block" style="border:1px solid black;border-radius:5px;min-height:400px">
                    <div>
                        <h2>Support Platform</h2>
                        <table style="font-size:18px;margin-top:20px">
                            <tr>
                                <td class="col-md-1">Operation System：</td>
                                <td class="col-md-1">Android</td>
                            </tr>
                            <tr>
                                <td class="col-md-1">OS Version：</td>
                                <td class="col-md-1">
                                    <font style="display:block">4.4.4</font>
                                    <font>5.0</font>
                                </td>
                            </tr>
                            <tr>
                                <td class="col-md-1">Bits：</td>
                                <td class="col-md-1">32</td>
                            </tr>
                            <tr>
                                <td class="col-md-1">Requested Memory：</td>
                                <td class="col-md-1">2048 MB</td>
                            </tr>
                            <tr>
                                <td class="col-md-1">Requested Disk：</td>
                                <td class="col-md-1">30 MB</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!--  End of Content -->

    </div>
	<!-- end of wrapper -->

	<!-- jQuery -->
    <script>
        var margin_l = 20;
        $('#user_block').css({
            'margin-right': margin_l + 'px'
        });

        var upload_block_width = $("#upload_block").width() + margin_l + 30;
        console.log(upload_block_width);
        $('#upload_block').css({
            'width': upload_block_width + 'px'
        });

       

        //approve button click
        $("#approve_button").click(function() {
            var reply = confirm("Do you want to approve this App ? ");
        });

        //deny button click
        $("#deny_button").click(function() {
            var reply = confirm("Do you want to deny this App ? ");
        });

        $("li[id^=depart]").click(function() {
            var choice = $(this).attr('id').split('depart_')[1]; //get the clicked data ;
            console.log(choice);
            $("li[id^=depart]").css({
                'background-color': 'white',
                'color': 'black'
            });
            $(this).css({
                'background-color': "#6898d4",
                'color': 'white'
            });
        });
    </script>

<%- include('../_layout/admin_footer'); %>

